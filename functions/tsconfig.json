{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": [
    "src/notifications/projectCompleted.ts",
    "src/notifications/projectCreated.ts",
    "src/notifications/taskCompleted.ts",  
    "src/notifications/eventCreated.ts"
  ]
}
